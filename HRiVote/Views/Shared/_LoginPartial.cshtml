@using Microsoft.AspNet.Identity
@*<script src="~/Scripts/bootstrap.min.js"></script>*@
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <div class="dropdown">
            <label class="dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
               @User.Identity.GetUserName()
            </label>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
             <ul>
                 <li class="dropdown-item" ></li>
                 <li class="dropdown-item" >@Html.ActionLink("Calendar","Index","Calendar")</li>               
                 <li class="dropdown-item">@Html.ActionLink("Home","Index","Home")</li>
                 <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
             </ul>
            </div>
        </div>
  
    }
}
else
{ 

    <ul class="nav navbar-nav navbar-collapse">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
