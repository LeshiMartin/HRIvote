@model HRiVote.ViewModels.EmployeeViewModel

@{
    ViewBag.Title = "Index";
}
<div class="container Back col-sm-offset-1" style="border: solid transparent;border-radius: 20px;">


    <h2 class="text-center">Index</h2>

    <div class="container">
        <p>
            @Html.ActionLink("Create New", "AddEmployee", null, new { @class = "btn btn-primary glyphicon glyphicon-pencil", @style = "border-radius: 12px;padding: 6px 20px;font-size: 15px;" })
        </p>
        <br /><br />
        @using (Html.BeginForm("IndexPost", "Employee", FormMethod.Post))
        {
            <div>
                <div class="col-sm-4 ">
                    @Html.Label("Job Possitions")
                    @Html.DropDownList("pos", new SelectList(Model.positions, "ID", "Title"), "---Filter by Job Posstions---", new { @class = "form-control", @id = "pos" })
                </div>
                <div class="col-sm-4 ">
                    @Html.Label("Skills")
                    @Html.DropDownList("skil", new SelectList(Model.skils, "ID", "Skill"), "---Filter by Skills---", new { @class = "form-control", @id = "skil" })
                </div>
                <br /><br />
                <input type="submit" class="btn btn-default" value="search " />
            </div>
        }
    </div>
    <div>
        <br /><br />
        <table id="myTable" class="table table-hover table-bordered col-sm-offset-3" style="float:right;">
            <thead>
                <tr>
                    <th>
                        Last Name
                    </th>
                    <th>
                        First Name
                    </th>

                    <th>
                        Job title
                    </th>

                    <th>
                        Available
                    </th>

                    <th>
                        Photo
                    </th>
                    <th>Action Links</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.emps)
            {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>

                        <td>
                            @Html.DisplayFor(x => item.job.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsAvailable)
                        </td>
                        <td>
                            @if (item.Photo == "No photo uploaded")
                {
                                @Html.DisplayFor(x => item.Photo)
                            }
                            else
                            {<img src="@Url.Content(item.Photo)" alt="@Html.DisplayFor(x => item.Photo)" width="100" />}
                        </td>
                        <td class="btn-group-sm">
                            @Html.ActionLink(" Edit", "Edit", new { id = item.ID }, new { @class = "glyphicon glyphicon-pencil btn btn-sm btn-default btn-primary", @style = "border-radius: 12px;padding: 4px 10px;font-size: 13px;" }) |
                            @Html.ActionLink(" Details", "Index", new { id = item.ID }, new { @class = " fa fa-search btn btn-sm  btn-info", @style = "border-radius: 12px;padding: 4px 10px;font-size: 13px;" }) |
                            @Html.ActionLink(" Delete", "Delete", new { id = item.ID }, new { @class = "glyphicon glyphicon-trash btn btn-sm btn-default btn-danger", @style = "border-radius: 12px;padding: 4px 10px;font-size: 13px;" })

                        </td>
                    </tr>

                }
            </tbody>

        </table>

    </div>
</div>

<br />
<br />
@if (Model.employee != null)
{
    @Html.HiddenFor(x => x.employee.ID, new { @id = "id" })
    <div class="container col-sm-offset-1">
        <div id="modal" class="modal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header" style="border:solid 1px black;">
                        <h2>Details</h2>
                        <h4>Employee</h4>
                    </div>
                    <div class="modal-body" style="font-size:15px !important;">
                        @Html.Partial("_PartialEmployeeView", Model.employee)
                    </div>
                </div>
            </div>
        </div>
    </div>

}

@section scripts{
    <script>
        $(document).ready(function () {
            var id = document.getElementById("id")

            if (id != null) {
                $("#modal").show();
            }

            $('#myTable').DataTable();
        } );


        
    </script>

}
