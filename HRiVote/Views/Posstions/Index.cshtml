@model IEnumerable<HRiVote.Models.JobPosition>

@{
    ViewBag.Title = "Index";
}
<br /><br /><br /><br />
<link rel="stylesheet" type="text/css" href="http://cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css">
<div class="container Back col-sm-offset-3 col-sm-6">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "AddPosition")
    </p>
    <table id="table" class="table table-bordered table-bordered ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        @Html.ActionLink(item.Title, "Index", "Employee", new { id = item.ID }, new { @class = "fa fa-paperplane" })
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID },new { @class = "btn btn-primary fa fa-pencil" }) | 
                        @if (item.Status == true)
                        {
                        <button data-project-id="@item.ID" type="button" class="btn btn-danger fa fa-trash js-delete">Delete</button>
                        }
                        else
                        {
                            <button data-project-id="@item.ID" type="button" class="btn btn-primary fa fa-arrow-up js-update">Add</button>
                        }
                    </td>
                </tr>
            </tbody>
        }
        

    </table>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#table").DataTable();
            $("#table").on("click", ".js-delete", function () {
                var button = $(this);
                $.ajax({
                    url: "/api/Possitons/" + button.attr("data-project-id"),
                    method: "DELETE",
                    success: function () {
                        button.parents("tr").remove();
                        console.log("Success")
                        
                    }
                })
            });
            $("#table").on("click", ".js-update", function () {
                var button = $(this);
                $.ajax({
                    url: "/api/Possitons/" + button.attr("data-project-id"),
                    method: "PUT",
                    success: function () {
                        button.parents("tr").remove();
                        console.log("Success")
                    }
                })
            });

        });
    </script>
}